create database roteiros;
use roteiros;
CREATE TABLE login (
tipo_permissao VARCHAR(20),
idLogin INTEGER PRIMARY KEY auto_increment
);

CREATE TABLE compra (
valor INTEGER,
dataCompra DATETIME,
idCompra INTEGER PRIMARY KEY auto_increment,
quantidade INTEGER,
cpf VARCHAR(20),
idPacote INTEGER
);

CREATE TABLE pacotes (
idPacote INTEGER PRIMARY KEY auto_increment,
translado VARCHAR(20),
hotel VARCHAR(20),
qtNoites VARCHAR(10),
idDestino INTEGER
);

CREATE TABLE destinos (
cidade VARCHAR(20),
pais VARCHAR(20),
idDestino INTEGER PRIMARY KEY auto_increment
);

CREATE TABLE cliente (
cpf VARCHAR(20) PRIMARY KEY,
telefone INTEGER,
nome VARCHAR(50),
email VARCHAR(20),
senha VARCHAR(10),
idLogin INTEGER,
FOREIGN KEY(idLogin) REFERENCES login (idLogin)
); 

ALTER TABLE compra ADD FOREIGN KEY(cpf) REFERENCES cliente (cpf);
ALTER TABLE compra ADD FOREIGN KEY(idPacote) REFERENCES pacotes (idPacote);
ALTER TABLE pacotes ADD FOREIGN KEY(idDestino) REFERENCES destinos (idDestino);

select * from PACOTES;

USE ROTEIROS;
ALTER TABLE pacotes ADD preco INTEGER;